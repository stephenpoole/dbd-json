{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "emitDeclarationOnly": true,
        "strict":true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters":true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "removeComments": false,
        "target": "es5",
        "lib": ["ESNext", "DOM"],
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "paths": {
            "@stephenpoole/deadbydaylight": ["src/en/index.ts"],
            "@stephenpoole/deadbydaylight/en": ["src/en/index.ts"],
            "@stephenpoole/deadbydaylight/es": ["src/es/index.ts"],
            "@stephenpoole/deadbydaylight/de": ["src/de/index.ts"],
            "@stephenpoole/deadbydaylight/fr": ["src/fr/index.ts"],
            "@stephenpoole/deadbydaylight/it": ["src/it/index.ts"],
            "@stephenpoole/deadbydaylight/jp": ["src/jp/index.ts"],
            "@stephenpoole/deadbydaylight/ko": ["src/ko/index.ts"],
            "@stephenpoole/deadbydaylight/pl": ["src/pl/index.ts"],
            "@stephenpoole/deadbydaylight/ru": ["src/ru/index.ts"],
            "@stephenpoole/deadbydaylight/th": ["src/th/index.ts"],
            "@stephenpoole/deadbydaylight/tr": ["src/tr/index.ts"],
            "@stephenpoole/deadbydaylight/zh": ["src/zh/index.ts"],
        }
    },
    "include": ["./src"],
    "exclude": ["!./src"],
    "compileOnSave": true
}
